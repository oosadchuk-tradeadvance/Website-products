        <template id="produ_index">
            <t t-call="website.layout">
                <t t-set="title">Prod</t>
                <div class="container">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#ID</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Seller</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="categories" t-as="category">
<!--                                 <p>
                                    <t t-esc="category.name"/>
                                </p> -->
                                <div class="panel-group" id="accordion1">
                                  
                                  <div class="panel panel-default template">
                                    <div class="panel-heading">
                                      <h4 class="panel-title">
                                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#collapse{{category.id}}">
                                          <t t-esc="category.name"/>
                                        </a>
                                      </h4>

                                    </div>
                                    <div t-attf-id="collapse{{category.id}}" class="panel-collapse collapse">
                                      <div class="panel-body">
                                        <t t-foreach="products" t-as="product">
                                            <tr>
                                                <td t-esc="product.id"/>
                                                <td t-esc="product.name"/>
                                                <td t-esc="product.categ_id.name"/>
                                                <t t-foreach="product.seller_id" t-as="seller">
                                                    <td t-esc="seller.name"/>
                                                </t>
                                                <td t-esc="product.list_price"/>
                                            </tr>
                                        </t>
                                      </div>
                                    </div>
                                  </div>
                                <!-- ### -->
                                </div>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>
    </data>
</openerp>
